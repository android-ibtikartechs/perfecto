<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/group_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center|start"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Group name"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <android.support.v7.widget.CardView
            android:id="@+id/add_group_btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/group_join_txt"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:lines="1"
                android:text="@string/join"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <com.hosamazzam.customviews.RoundCornerImageView
            android:id="@+id/group_photo_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@color/gray_Lite"
            app:cornerRadius="20.0" />

        <TextView
            android:id="@+id/group_memcount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:drawableEnd="@drawable/ic_action_members"
            android:drawableRight="@drawable/ic_action_members"
            android:gravity="center"
            android:lines="1"
            android:text="15"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>


</LinearLayout>